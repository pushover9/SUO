<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
  <mapper namespace="Reply">
  	<!-- 댓글 추가 -->
    <insert id="reply_in" parameterType="r">
    insert into reply (rno,bno,replyer,replytext,regdate) values(rno_seq.nextval,#{bno},#{replyer},
    #{replytext},sysdate)
  </insert>
  
  <!-- 댓글 목록 -->
  <select id="reply_list" parameterType="int" resultType="r">
   select * from reply where bno=#{bno} order by rno desc
  </select>
  
  <!-- 댓글 수정 -->
  <update id="reply_edit" parameterType="r">
   update reply set replytext=#{replytext}, updatedate=sysdate where rno=#{rno}
  </update>
  
  <!-- 댓글 삭제 -->
  <delete id="reply_del" parameterType="int">
     delete reply where rno=#{rno}
  </delete>
  
   <!-- 댓글 삭제 -->
  <delete id="reply_board_del" parameterType="int">
     delete reply where bno=#{bno}
  </delete>
  
  <!-- 댓글 번호로 게시판 번호값 알아내기 -->
  <select id="reply_bno" parameterType="int" resultType="int">
   select bno from reply where rno=#{rno}
  </select>
  </mapper>
